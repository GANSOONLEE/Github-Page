<section id="header">
  <h1 class="header__title">數位化創新專業卓越</h1>
  <h3 class="header__subtitle">致力於打造安全、高效且富有使用者體驗的解決方案。</h3>
  <div class="header__button-group">
    <button class="header__button-view-portfolio">查看作品集</button>
    <button class="header__button-get-in-touch">取得聯繫</button>
  </div>
  <div class="header__avatar">
    <img src="/avatar.jpg" alt="Avatar">
  </div>
</section>

<style lang="scss">
@use "@/styles/mixins" as *;
@use "@/styles/variables" as *;

section#header {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  padding: 4rem 13rem;
  text-align: left;
  min-height: 100vh;
  h1.header__title {
    font-size: 3.6rem;
    font-family: 'JetBrains Mono';
    line-height: 5rem;
    color: #e2ebf3;
  }
  h3.header__subtitle {
    font-weight: lighter;
    line-height: 2rem;
    margin-top: 1.6rem;
    font-size: 1.2rem;
    color: #94a3b8;
  }
  div.header__button-group {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
    button {
      padding: .6rem 1rem;
      border-radius: 4px;
      &.header__button-view-portfolio {
        @include button-hover(#3c83f6, -10%);
      }
      &.header__button-get-in-touch {
        border: 1px solid #ffffff2e;
        color: $primary-white;
        background: transparent;
        &:hover {
          background: #ffffff17;
        }
      }
    }
  }
  div.header__avatar {
    margin-top: 2rem;
    border-radius: 100%;
    background: #ffffff4a;
    aspect-ratio: 1/1;
    width: 20rem;
    overflow: hidden;
    border: 4px solid $primary-color;
    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }
}
</style>